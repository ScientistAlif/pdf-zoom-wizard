<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ChoiceBox?>

<GridPane fx:id="view" xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10.0" vgap="10.0">
	<Label text="Root directory:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
	<TextField fx:id="directoryTextField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
	<Button fx:id="browseButton" text="Browse" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
	<Label text="Zoom level:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
	<ChoiceBox fx:id="zoomChoiceBox" value="Inherit zoom" GridPane.rowIndex="1" 
		GridPane.columnIndex="1">
			<String fx:value="Fit page"/>
			<String fx:value="Actual size"/>
			<String fx:value="Fit width"/>
			<String fx:value="Fit visible"/>
			<String fx:value="Inherit zoom"/>
	</ChoiceBox>
	<Label text="PDF version:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
	<ChoiceBox fx:id="versionChoiceBox" value="1.4" GridPane.rowIndex="2" 
		GridPane.columnIndex="1">
			<String fx:value="1.0"/>
			<String fx:value="1.1"/>
			<String fx:value="1.2"/>
			<String fx:value="1.3"/>
			<String fx:value="1.4"/>
			<String fx:value="1.5"/>
			<String fx:value="1.6"/>
			<String fx:value="1.7"/>
	</ChoiceBox>
	<Label text="State:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
	<Text fx:id="stateText" text="READY" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
	<Button fx:id="runButton" text="Run" disable="true" GridPane.halignment="RIGHT" 
		GridPane.rowIndex="4" GridPane.columnIndex="2"/>
</GridPane>

